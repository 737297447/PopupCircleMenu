<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circlemenu="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_re"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.panshen.popupcircleview.PopupCircleView
        android:id="@+id/PopupMenu2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        circlemenu:button_color="#ffffff"
        circlemenu:button_size="55dp"
        circlemenu:anim_duration="250"
        circlemenu:radius="100dp">

        <ImageView
            android:id="@+id/iv_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bg" />

    </com.panshen.popupcircleview.PopupCircleView>

    <com.panshen.popupcircleview.PopupCircleView
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        circlemenu:button_color="#ffffff"
        circlemenu:button_size="55dp"
        circlemenu:anim_duration="250"
        circlemenu:radius="100dp">

        <ImageView
            android:id="@+id/iv_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bg" />

    </com.panshen.popupcircleview.PopupCircleView>

</RelativeLayout>
