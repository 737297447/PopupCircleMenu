<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circlemenu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        circlemenu:cardCornerRadius="5dp">

        <me.panshen.com.circlemenu.PPCircle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            circlemenu:anim_duration="200"
            circlemenu:button_color="#ffffff"
            circlemenu:button_size="55dp"
            circlemenu:radius="100dp">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bg" />
        </me.panshen.com.circlemenu.PPCircle>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="5dp">

        <me.panshen.com.circlemenu.PPCircle
            android:id="@+id/ppcircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            circlemenu:anim_duration="200"
            circlemenu:button_color="#ffffff"
            circlemenu:button_size="55dp"
            circlemenu:open_direction="RIGHT"
            circlemenu:radius="100dp">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="7dp"
                android:src="@drawable/dots" />
        </me.panshen.com.circlemenu.PPCircle>

        <me.panshen.com.circlemenu.PPCircle
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            circlemenu:anim_duration="200"
            circlemenu:button_color="#ffffff"
            circlemenu:button_size="55dp"
            circlemenu:open_direction="LEFT"
            circlemenu:radius="100dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="7dp"
                android:src="@drawable/dots" />
        </me.panshen.com.circlemenu.PPCircle>
    </RelativeLayout>
</LinearLayout>



